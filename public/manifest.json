  "icons": {
    "48": "icons/icon48-alt.png"
  },
  "browser_action": {
    "default_icon": "icons/icon48-alt.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "http://raspberrypi/"
  ]
}